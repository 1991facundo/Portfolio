---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SectionContainer from "../components/SectionContainer.astro";
import SocialPill from "../icons/SocialPill.astro";
import Linkedin from "../icons/Linkedin.astro";
import Github from "../icons/Github.astro";
import Mail from "../icons/Mail.astro";
import Experience from "../components/Experience.astro";
import Briefcase from "../icons/Briefcase.astro";
import Code from "../icons/Code.astro";
import Projects from "../components/Projects.astro";
import Form from "../components/Form.astro";
import HardSkills from "../components/HardSkills.astro";
import SoftSkills from "../components/SoftSkills.astro";
import SSkills from "../icons/SSkills.astro"
import HSkills from "../icons/HSkills.astro"
---

<Layout
  title="<Facundo Fernandez/> - Full Stack web developer"
  description="Merging logic with creativity, I specialize in crafting user-friendly and visually appealing web solutions. Passionate about delivering intuitive and engaging user experiences. Continually exploring cutting-edge trends and technologies in web development. Committed to creating innovative, user-centric website designs."
>
  <main class="px-4">
    <SectionContainer class="py-28 pb-20">
      <img
        class="rounded-tl-full size-48"
        src="https://i.postimg.cc/4xJVL3dM/profile-Picture.jpg"
        alt=""
      />

      <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10">
        Hey! I'm Facundo
      </h1>

      <h2 class="text-2xl text-wrap text-white">Full Stack Developer & UX Enthusiast.</h2>

      <h4 class="text-white">Merging logic with creativity, I specialize in crafting user-friendly and visually appealing web solutions. Passionate about delivering intuitive and engaging user experiences. Continually exploring cutting-edge trends and technologies in web development. Committed to creating innovative, user-centric website designs.</h4>

      <nav class="flex gap-4 mt-8 flex-wrap text-white">
        <SocialPill href="https://www.linkedin.com/in/facundofernandez1991">
          <Linkedin class="size-6" />
          LinkedIn
        </SocialPill>

        <SocialPill href="https://github.com/1991facundo">
          <Github class="size-7" />
          GitHub
        </SocialPill>

        <SocialPill href="mailto:facundo91.1401@gmail.com">
          <Mail class="size-7" />
          facundo91.1401@gmail.com
        </SocialPill>
      </nav>

      <h4 class="text-white mt-4">Education:
<p>● Full Stack Developer, Henry Bootcamp (2023)</p> 
<p>● Professional Frontend Developer, UTN Buenos Aires (2022)</p>
<p>● Expert in UX and IxD, UTN Buenos Aires (2022)</p>
<p>● Bachelor's Degree in Audiovisual Communication, UNSaM Buenos Aires (2012)</p></h4>

    </SectionContainer>

    <SectionContainer id="about">



      <h2 class="text-2xl text-white font-semibold mb-6 flex gap-x-3 items-center mt-8">
      <HSkills class="size-8"/>
        Coding Skills
      </h2>
      <HardSkills />

      <h2 class="text-2xl text-white font-semibold mb-6 flex gap-x-3 items-center mt-8">
        <SSkills class="size-8"/>
        Soft Skills
      </h2>
      <SoftSkills />
    </SectionContainer>

    <SectionContainer id="projects">
      <h2 class="text-2xl text-white font-semibold mb-6 flex gap-x-3 items-center mt-8">
        <Code class="size-7" />
        Last Project
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="experience">
      <h2 class="text-2xl text-white font-semibold mb-6 flex gap-x-3 items-center mt-8">
        <Briefcase class="size-8" />
        Work Experience
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="contact">
      <h2 class="text-2xl text-white font-semibold mb-6 flex gap-x-3 items-center mt-8">
        <Mail class="size-7" />
        Contact Form
      </h2>
      <Form />
    </SectionContainer>
  </main>
</Layout>
