---

import connectinkImage from "../assets/connectink.jpeg"

const PROJECTS = [
  {
    title: "ConnectINK",
    description: "Descripcion del proyecto",
    link: "https://connectink.vercel.app/",
    github: "Repositorio de github",
    image: connectinkImage.src,
    tags: ['HTML', 'CSS', 'Javascript'],
    video:"el link al video"
  }
];
---

{
    PROJECTS.map(project => (

    <article>
        <h3 class="text-2xl font-semibold mb-2 text-[#48d9e6]">{project.title}</h3>
        <p class="text-lg mb-4 text-pretty">{project.description}</p>
        <a href= {project.link}>Link to the project</a>
        <img class="rounded-3xl shadow-xl shadow-white/10 size-3/4" src={project.image} alt="ConnectInk image">
          <div class="flex mt-4">
        {project.tags.map((tag) => (
            <span class="mr-2">#{tag}</span>
        ))}
    </div>
    </article>

    ))
}
