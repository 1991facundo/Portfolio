---
const PROJECTS = [
  {
    title: "Project 1",
    description: "Descripcion del proyecto",
    link: "link al proyecto",
    github: "Repositorio de github",
    image: "Aca va una imagen",
    tags: ['HTML', 'CSS', 'Javascript'],
  }
];
---

{
    PROJECTS.map(project => (

    <article>
        <h3>{project.title}</h3>
        <p>{project.description}</p>
        <ul>
            {project.tags.map((tag) => ( 
                <li>{tag}</li>
            ))}
        </ul>
    </article>

    ))
}
