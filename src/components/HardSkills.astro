---
const programmingAndMarkupLanguages = ["JavaScript (ES6+)", "PHP", "HTML5", "CSS3"];
const frameworksAndLibraries = ["React.js", "Redux", "Next.js", "jQuery", "Bootstrap", "Sass", "Tailwind CSS", "Express", "Sequelize", "Laravel"];
const developmentTools = ["Figma", "Webpack", "Spline3D", "GIT"];
const databases = ["SQL", "PostgreSQL", "MySQL"];
const otherTools = ["Wordpress", "REST APIs", "SOAP APIs"];

const skills = [
  { category: "Programming and Markup Languages", skills: programmingAndMarkupLanguages },
  { category: "Frameworks and Libraries", skills: frameworksAndLibraries },
  { category: "Development Tools", skills: developmentTools },
  { category: "Databases", skills: databases },
  { category: "Other Tools", skills: otherTools },
];

const skillClass = "bg-blue-100 text-blue-800 p-2 rounded-md m-1";
---

<div class="p-4">
  {skills.map((category) => (
    <div>
      <h3 class="font-bold text-xl mb-2">{category.category}</h3>
      <div class="flex flex-wrap">
        {category.skills.map((skill) => <span class={skillClass}>{skill}</span>)}
      </div>
    </div>
  ))}
</div>

